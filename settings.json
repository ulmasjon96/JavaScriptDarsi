	// Inline tavsiyalar uchun shrift oilasini boshqaradi.
	"editor.inlineSuggest.fontFamily": "default",

	// Inline tavsiyalar panelini qachon ko'rsatishni boshqaradi.
	// - always: Inline tavsiyalar paneli har doim ko'rsatiladi.
	// - onHover: Faqat sichqoncha ustiga keltirilganda ko'rsatiladi.
	// - never: Hech qachon ko'rsatilmaydi.
	"editor.inlineSuggest.showToolbar": "onHover",

	// Tahrirlagichda inline tavsiyalar uchun sintaksis ta'kidlashni ko'rsatishni boshqaradi.
	"editor.inlineSuggest.syntaxHighlightingEnabled": true,

	// `Tab` tugmasini bosganda bo'sh joylar qo'shilishini boshqaradi. `editor.detectIndentation` yoqilgan bo'lsa, fayl mazmuniga qarab bu sozlama o'zgaradi.
	"editor.insertSpaces": true,
	"editor.detectIndentation": true,

	// Qavslarning tahrirni oshiruvchi yoki kamaytiruvchi belgilari.
	"editor.language.brackets": null,

	// Qavs juftliklarini ranglashni yoqish, agar qavs juftligini ranglash qo'llab-quvvatlansa.
	"editor.language.colorizedBracketPairs": null,

	// Katta fayllar uchun xotira talab qiladigan ba'zi funksiyalarni o'chirishni boshqaradi.
	"editor.largeFileOptimizations": true,

	// Harflar orasidagi bo'shliqni boshqaradi (piksel).
	"editor.letterSpacing": 0.4,

	// Tahrirlagichda kod harakatlarini ko'rsatishni yoqish (yengil lampochka).
	// - off: Kod harakati menyusini o'chirish.
	// - onCode: Koddagi qatorda kursor turganda ko'rsatish.
	// - on: Kod yoki bo'sh qatorda kursor turganda ko'rsatish.
	"editor.lightbulb.enabled": "onCode",

	// Qator raqamlarini ko'rsatishni boshqaradi.
	// - off: Qator raqamlarini ko'rsatmaydi.
	// - on: To'liq raqamlarni ko'rsatadi.
	// - relative: Kursor joylashuviga nisbatan raqamlarni ko'rsatadi.
	// - interval: Har 10 qatorda bir marta raqamlarni ko'rsatadi.
	"editor.lineNumbers": "on",

	// Tahrirlagichda havolalarni aniqlash va ularni bosish mumkinligini boshqaradi.
	"editor.links": true,

	// Mos keladigan qavslarni ta'kidlashni boshqaradi.
	"editor.matchBrackets": "always",

	// Belgilangan uzunlikdan oshgan qatordagi matnni tokenizatsiya qilishni o'chirish.
	"editor.maxTokenizationLineLength": 20000,

	// Minimap avtomatik yashirilishini boshqaradi.
	"editor.minimap.autohide": false,

	// Minimap ko'rsatilishini boshqaradi.
	"editor.minimap.enabled": true,

	// Kommentariyalar ichidagi bo'lim sarlavhalarini aniqlash uchun ishlatiladigan muntazam ifoda.
	"editor.minimap.markSectionHeaderRegex": "\\bMARK:\\s*(?<separator>-?)\\s*(?<label>.*)$",

	// Minimapning kengligini cheklash.
	"editor.minimap.maxColumn": 120,

	// Minimapda qatorning haqiqiy belgilarini ko'rsatish.
	"editor.minimap.renderCharacters": true,

	// Minimapdagi kontentning masshtabini boshqarish: 1, 2 yoki 3.
	"editor.minimap.scale": 1,

	// Minimapdagi bo'lim sarlavhalarining shrift o'lchamini boshqaradi.
	"editor.minimap.sectionHeaderFontSize": 9,

	// Minimapdagi bo'lim sarlavhalaridagi harflar orasidagi bo'shliqni boshqaradi.
	"editor.minimap.sectionHeaderLetterSpacing": 1,

	// Minimapda `MARK:` kommentariyalarini bo'lim sarlavhalari sifatida ko'rsatish.
	"editor.minimap.showMarkSectionHeaders": true,

	// Minimapda nomlangan hududlarni bo'lim sarlavhalari sifatida ko'rsatish.
	"editor.minimap.showRegionSectionHeaders": true,

	// Minimapning slayderi qachon ko'rsatilishini boshqaradi.
	"editor.minimap.showSlider": "mouseover",

	// Minimapni qaysi tomonida ko'rsatish.
	"editor.minimap.side": "right",

	// Minimapning o'lchamini boshqaradi.
	// - proportional: Minimap tahrirlagichning o'lchami bilan bir xil o'lchamda bo'ladi (va ehtimol, aylantirish imkoniyati bo'ladi).
	// - fill: Minimap tahrirlagichning balandligiga to'liq to'ldiriladi (aylantirish yo'q).
	// - fit: Minimap tahrirlagichdan katta bo'lmasligi uchun moslashadi (aylantirish yo'q).
	"editor.minimap.size": "proportional",

	// Sichqoncha bilan aylantirishda `deltaX` va `deltaY` uchun sezgirlik koeffitsientini boshqaradi.
	"editor.mouseWheelScrollSensitivity": 1,

	// Tahrirlagichda faollashgan kursorlar sonini cheklash.
	"editor.multiCursorLimit": 10000,

	// Bir-birini qoplagan kursorlarni birlashtirish.
	"editor.multiCursorMergeOverlapping": true,

	// Kursorlar soni bir xil bo'lsa, qaysi kursorni qo'llashni boshqaradi.
	// - spread: Har bir kursor faqat bir qatorni qo'yadi.
	// - full: Har bir kursor to'liq matnni qo'yadi.
	"editor.multiCursorPaste": "spread",

	// Boshqa ochiq fayllarda ham mos keladigan joylarni ta'kidlashni boshqaradi.
	// - off: Boshqa fayllarda joylar ta'kidlanmaydi.
	// - singleFile: Faqat joriy faylda joylar ta'kidlanadi.
	// - multiFile: Eksperimental: Barcha ochiq fayllarda joylar ta'kidlanadi.
	"editor.occurrencesHighlight": "singleFile",

	// Joylar ta'kidlanganidan keyin qaysi kechikish bilan ta'kidlanishini boshqaradi.
	"editor.occurrencesHighlightDelay": 0,

	// Kursorning ko'rinishini tahrir rejimida boshqaradi.
	"editor.overtypeCursorStyle": "block",

	// Pastdagi matnni qo'shishda o'zgartirishning tahrirlanishini boshqaradi.
	"editor.overtypeOnPaste": true,

	// Overview ruler atrofida chegaraning chizilishi.
	"editor.overviewRulerBorder": true,

	// Tahrirlagichning pastki qirqi bilan oxirgi qatordagi bo'shliqni boshqaradi.
	"editor.padding.bottom": 30,

	// Kod yozayotganda tavsiyalarni ba'zi belgilar (masalan, ;) orqali tanlashga ruxsat beradi
	"editor.acceptSuggestionOnCommitCharacter": true,

	// Enter tugmasi bilan tavsiyalarni tanlashni boshqaradi
	// "on" — doim ruxsat beradi, "smart" — faqat matnda haqiqiy o‘zgarish bo‘lsa tanlanadi
	"editor.acceptSuggestionOnEnter": "on",

	// Ekran o‘quvchilar (screen reader) uchun bir vaqtda nechta qatordan foydalanish mumkinligini belgilaydi
	"editor.accessibilityPageSize": 500,

	// Izohlar (kommentariyalar) avtomatik yopilishi
	"editor.autoClosingComments": "languageDefined",

	// Avtomatik kiritilgan yopuvchi belgilarni o‘chirishga ruxsat
	"editor.autoClosingDelete": "auto",

	// Avtomatik kiritilgan yopuvchi belgilar ustiga yozishga ruxsat
	"editor.autoClosingOvertype": "auto",

	// Qavslar kabi, qo‘shtirnoqlar ham avtomatik yopiladimi — shuni boshqaradi
	"editor.autoClosingQuotes": "languageDefined",

	// Kod yozayotganda avtomatik identatsiya (bo‘sh joylar bilan moslash) darajasini belgilaydi
	"editor.autoIndent": "full",

	// Belgilar oralig‘ida avtomatik ravishda qamrab olishni yoqish (qo‘shtirnoq yoki qavs)
	"editor.autoSurround": "languageDefined",

	// Kod ustida kichik ma’lumotlar ko‘rsatish (CodeLens)
	"editor.codeLens": true,

	// Ranglar ishlatilgan joylarda rang tanlash oynasini ko‘rsatish
	"editor.colorDecorators": true,

	// Rang tanlovchi (color picker) qanday holatda paydo bo‘ladi
	"editor.colorDecoratorsActivatedOn": "clickAndHover",

	// Kommentariyalarda bo‘sh satrlar e’tiborga olinsinmi
	"editor.comments.ignoreEmptyLines": true,

	// Kommentariya qo‘shilganda bo‘sh joy kiritilsinmi
	"editor.comments.insertSpace": true,

	// Kodni buklash (folding) imkoniyati — uzoq kodni qisqartirish
	"editor.foldingHighlight": true,

	// Bracket chiziqli yo‘riqnomalar ko‘rsatilsinmi
	"editor.guides.highlightActiveBracketPair": true,

	// Tavsiyalarni kiritishda ishlatiladigan imkoniyatlar (inlay hints)
	"editor.inlayHints.enabled": "on",

	// Kodda bracketlar, importlar, funksiyalarni avtomatik aniqlash va Collapse qilish
	"editor.foldingImportsByDefault": false,

	// Hover — sichqoncha bilan ustiga olib borilganda chiqadigan info oynalar
	"editor.hover.enabled": true,
	"editor.hover.sticky": true
}
