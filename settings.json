{
	// SVG fayllarining oldindan ko‘rish oynasining fonini o‘zgartirish:
	// SVG oldindan ko‘rish uchun fon rangini oq qilib belgilash
	"svgPreview.style": {
		"html": {
			"background": "white"
		}
	},

	// Juft qavslar (brackets) ranglarini avtomatik ranglashni yoqish:
	"editor.bracketPairColorization.enabled": true,

	// Qavslar orasidagi yo‘l ko‘rsatkichlarini faollashtirish:
	// Aktiv qavslar uchun vizual ko‘rsatkichlarni ko‘rsatadi
	"editor.guides.bracketPairs": "active",

	// Yatay qavslar orasidagi yo‘l ko‘rsatkichlarini faollashtirish:
	// Yatay qavslar orasida ko‘rsatkichlarni faollashtiradi
	"editor.guides.bracketPairsHorizontal": "active",

	// Aktiv identatsiyani ta'kidlamaslik:
	// Bu sozlama orqali faqat qavslarni ko‘rsatish, ammo identatsiya chizig‘ini ta'kidlamaydi
	"editor.guides.highlightActiveIndentation": false,

	// VS Code ish joyidagi ranglarni maxsus sozlash:
	"workbench.colorCustomizations": {
		// Kursorning oldingi rangini yashil qilib belgilash
		"editorCursor.foreground": "#00ff1e",

		// Terminaldagi kursorning oldingi rangini yashil qilib belgilash
		"terminalCursor.foreground": "#00ff1e",

		// Rulerda xato, ogohlantirish va ma'lumot uchun vizual tasvirlarni yashirish
		"editorOverviewRuler.errorForeground": "#0000", // Xatolarni yashirish
		"editorOverviewRuler.warningForeground": "#0000", // Ogohlantirishlarni yashirish
		"editorOverviewRuler.infoForeground": "#0000", // Ma'lumotlarni yashirish

		// Qavslarni ta'kidlash uchun turli ranglar:
		"editorBracketHighlight.foreground1": "#FFD700", // Birinchi qavsning rangini oltin rangga o‘zgartirish
		"editorBracketHighlight.foreground2": "#DA70D6", // Ikkinchi qavsning rangini lavanda rangiga o‘zgartirish
		"editorBracketHighlight.foreground3": "#179fff", // Uchinchi qavsning rangini ko‘k rangga o‘zgartirish

		// Qavs juftliklari uchun fon ranglarini sozlash:
		"editorBracketPairGuide.background1": "#ffd90080", // Birinchi qavs juftligi uchun fon rangini sariq qilib belgilash
		"editorBracketPairGuide.background2": "#CC66CC80", // Ikkinchi qavs juftligi uchun fon rangini binafsha qilib belgilash
		"editorBracketPairGuide.background3": "#87CEFA80", // Uchinchi qavs juftligi uchun fon rangini och-ko‘k qilib belgilash

		// Aktiv qavs juftligi uchun fon ranglarini sozlash:
		"editorBracketPairGuide.activeBackground1": "#ffd90080", // Aktiv birinchi qavs juftligi fon rangi
		"editorBracketPairGuide.activeBackground2": "#CC66CC80", // Aktiv ikkinchi qavs juftligi fon rangi
		"editorBracketPairGuide.activeBackground3": "#87CEFA80" // Aktiv uchinchi qavs juftligi fon rangi
	},

	// Yangi fayllarni alohida oynada ochish:
	// "off" — fayllar ayni oynada ochiladi
	"window.openFilesInNewWindow": "off",

	// Matnni o‘qish uchun avtomatik qatorni kengaytirish:
	// "on" — matnni o‘qish uchun uzun qatordagi matnni avtomatik ravishda yangi qatorga ko‘chiradi
	"editor.wordWrap": "on",

	// Qatorni o‘qish uchun matnni qaysi holatda joylashishini belgilash:
	// "same" — yangi qatordagi matnni birinchi qatorning indentatsiyasiga mos ravishda o‘qiydi
	"editor.wrappingIndent": "same",

	// Kiritishlarni yashirish va qaysi kod bloklarini o‘zgartirish uchun qatorlarni bükme (folding):
	"editor.folding": true,

	// Kod takliflarida tanlashni boshida (birinchi) variantga olib borish:
	"editor.suggestSelection": "first",

	// Oxirgi qatordan keyin skrollni davom ettirish:
	// true — oxirgi qatorni ko‘rganingizdan so‘ng yana skrollni davom ettiradi
	"editor.scrollBeyondLastLine": true,

	// Ko‘p kursorli rejimda qanday tugma ishlatishni tanlash:
	// "ctrlCmd" — Windows/Linux uchun Ctrl, macOS uchun Cmd ishlatiladi
	"editor.multiCursorModifier": "alt",

	// Linked editing — biror elementni tahrirlaganingizda unga bog‘langan boshqa elementlarni ham tahrirlashni avtomatik ravishda ta'minlash:
	"editor.linkedEditing": true,

	// HTML, JavaScript va TypeScript fayllarida avtomatik yopuvchi teglar:
	// true — teglar avtomatik ravishda yopiladi
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"typescript.autoClosingTags": true,

	// Nazorat belgilarini (control characters) tahrir qilishda ko‘rsatmaslik:
	"editor.renderControlCharacters": true, ////////////////////////////////

	// Unicode’ning noaniq belgilarini ta'kidlashni o‘chirish:
	"editor.unicodeHighlight.ambiguousCharacters": false,

	// Takliflar ko‘rsatilganda, tezlikni belgilash:
	// 0 — takliflar darhol ko‘rsatiladi
	"editor.quickSuggestionsDelay": 0,

	// Tahrir qilish oynasida glyph margin’ni o‘chirish:
	"editor.glyphMargin": false,

	// Gorizontal va vertikal skrollbalarni yashirish:
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",

	// Font ligaturalarini yoqish:
	// true — ligaturalar (yani, bir nechta belgilarni bitta tasvirga o‘zgartirish) faollashtiriladi
	"editor.fontLigatures": true,

	// Inlay hints uchun font o‘lchamini belgilash:
	// "PragmataPro" — bu maxsus font o‘lchami
	"editor.inlayHints.fontFamily": "PragmataPro",

	// Token ranglari va font stilini sozlash:
	"editor.tokenColorCustomizations": {
		// Kommentlar uchun rangni belgilash (yashil rang)
		"comments": "#00ff08b0",

		// TextMate qoidalari bo‘yicha rang va font stilini sozlash
		"textMateRules": [
			{
				// Kommentlar, sinf nomlari, kalit so‘zlar, o‘zgarmaslar va saqlash modifierlarining font stilini italik qilish
				"scope": [
					"comment",
					"entity.name.type.class",
					"keyword",
					"constant",
					"storage.modifier",
					"storage.type.class.js"
				],
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				// Noto‘g‘ri, operatorlar, CSS raqamli konstantalar va boshqa o‘zgaruvchilar uchun font stilini o‘zgartirmaslik
				"scope": [
					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric.decimal.js",
					"constant.numeric.json"
				],
				"settings": {
					"fontStyle": "bold"
				}
			}
		]
	},

	// Terminaldagi yozuv o‘lchamini belgilash:
	"terminal.integrated.fontSize": 15,

	// Explorer panelida papkalarni siqmasdan ko‘rsatish:
	// false — papkalarni siqmasdan, ya'ni to‘liq ko‘rsatadi
	"explorer.compactFolders": false,

	// Emmet uchun til moslashuvi:
	"emmet.includeLanguages": {
		"typescript": "typescriptreact",
		"blade": "html", // Blade fayllarini HTML sintaksisi bilan ishlashga moslashtirish
		"javascript": "javascriptreact" // JavaScript fayllarini JavaScript React bilan ishlashga moslashtirish
	},

	// Tab o‘lchamining o‘lchamini kamaytirish:
	// "shrink" — tablar kichraytiriladi (tablarning o‘lchami avtomatik ravishda bo‘sh joyga mos keladi)
	"workbench.editor.tabSizing": "shrink",

	// Debugger asboblar panelini yashirish:
	// "hidden" — Debugger paneli yashiriladi, faqat kerakli holatlarda ko‘rinadi
	"debug.toolBarLocation": "hidden",

	// Breakpoint (to‘xtash nuqtasi) bo‘lganda, oynani avtomatik ravishda fokus qilishni o‘chirish:
	// false — breakpoint (to‘xtash nuqtasi) bo‘lganda, oynaning avtomatik ravishda fokus qilinishini o‘chirish
	"debug.focusWindowOnBreak": false,

	// Inline breakpoint (to‘xtash nuqtasi) nomzodlarini ko‘rsatmaslik:
	// false — inline breakpoint nomzodlari ko‘rsatilmaydi
	"debug.showInlineBreakpointCandidates": false,

	// Overview ruler (umumiy ko‘rish chizig‘i)da breakpoint (to‘xtash nuqtasi)larni ko‘rsatmaslik:
	// false — breakpoints umumiy ko‘rish chizig‘ida ko‘rsatilmaydi
	"debug.showBreakpointsInOverviewRuler": false,

	// Prettier-da nuqtali vergul (semi) ishlatilmasligi:
	// false — nuqtali vergul (semi) ishlatilmaydi
	"prettier.semi": true,

	// Prettier-da tab o‘rniga bo‘shliq ishlatish:
	// true — Prettier kodni tab bilan indentatsiya qiladi
	"prettier.useTabs": true,

	// Prettier-da bir qo‘shni belgini ishlatish:
	// true — yagona qo‘shni belgi (single quote) ishlatiladi (misol: `'` o‘rniga `"` emas)
	"prettier.singleQuote": true,

	// JSX uchun Prettier-da bir qo‘shni belgini ishlatish:
	// true — JSX da yagona qo‘shni belgi ishlatiladi
	"prettier.jsxSingleQuote": true,

	// Fayl saqlanganida kodni tartibga solish (importlar):
	// "explicit" — importlarni aniq ravishda tartibga solish (automatik importlarni o‘zgartirish)
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixAll": "always"
	},

	// Prettier-da arrow qavslarini o‘rganishda ularni kamroq ishlatish:
	// "avoid" — arrow qavslarini faqat kerak bo‘lganda ishlatish
	"prettier.arrowParens": "avoid",

	// Inline takliflarni (inline suggestions) faollashtirish:
	"editor.inlineSuggest.enabled": true,

	// HTML fayllari uchun Prettier formatter'ini ishlatish:
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// Breadcrumbs (yo‘l ko‘rsatkichlari) ikonalarini yashirish:
	"breadcrumbs.icons": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da tugmalarning ko‘rsatilishini o‘chirish:
	"breadcrumbs.showKeys": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da fayllarning ko‘rsatilishini o‘chirish:
	"breadcrumbs.showFiles": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da simvollar yo‘lini ko‘rsatishni o‘chirish:
	"breadcrumbs.symbolPath": "off",

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da massivlarning ko‘rsatilishini o‘chirish:
	"breadcrumbs.showArrays": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da voqealar (events)ni ko‘rsatishni o‘chirish:
	"breadcrumbs.showEvents": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da maydonlarni (fields) ko‘rsatishni o‘chirish:
	"breadcrumbs.showFields": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da klasslarni ko‘rsatishni o‘chirish:
	"breadcrumbs.showClasses": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da metodlarni ko‘rsatishni o‘chirish:
	"breadcrumbs.showMethods": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da boolean (mantiqiy) qiymatlarni ko‘rsatishni o‘chirish:
	"breadcrumbs.showBooleans": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da funktsiyalarni ko‘rsatishni o‘chirish:
	"breadcrumbs.showFunctions": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da konstantalarni ko‘rsatishni o‘chirish:
	"breadcrumbs.showConstants": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da enum a'zolarini ko‘rsatishni o‘chirish:
	"breadcrumbs.showEnumMembers": false,

	// Breadcrumbs (yo‘l ko‘rsatkichlari)da konstruktorlarni ko‘rsatishni o‘chirish:
	"breadcrumbs.showConstructors": false,

	// JavaScript fayllarida importlarni ko‘chirishni faollashtirish (fayl ko‘chirilganda importlarni yangilash):
	"javascript.updateImportsOnFileMove.enabled": "always",

	// TypeScript fayllarida importlarni ko‘chirishni faollashtirish (fayl ko‘chirilganda importlarni yangilash):
	"typescript.updateImportsOnFileMove.enabled": "always",

	// TypeScript-da qo‘shni belgini yagona qo‘shni belgi (`'`) bilan ishlatish:
	"typescript.preferences.quoteStyle": "single",

	// JavaScript-da qo‘shni belgini yagona qo‘shni belgi (`'`) bilan ishlatish:
	"javascript.preferences.quoteStyle": "single",

	// JavaScript formatida nuqtali vergul (semi)ni olib tashlash:
	"javascript.format.semicolons": "remove",

	// TypeScript formatida nuqtali vergul (semi)ni olib tashlash:
	"typescript.format.semicolons": "remove",

	// Overview ruler (umumiy ko‘rish chizig‘i)da kursorni yashirish:
	"editor.hideCursorInOverviewRuler": true,

	// Fayllarni yashirish sozlamalari (masalan, `.map.js`, `.expo`, `.idea`, va boshqalar):
	"files.exclude": {
		"**/*.map.js": true, // JavaScript manba xaritalarini yashirish
		"**/.expo": true, // Expo direktoriyasini yashirish
		"**/.expo-shared": true, // Expo ulashilgan fayllarni yashirish
		"**/.idea": true, // IntelliJ IDEA yoki PhpStorm uchun yashirish
		"**/.next": true, // Next.js build fayllarini yashirish
		"**/dist": true // Distributsiya (build) fayllarini yashirish
	},
	// Tizimni yopishdan oldin tasdiqlashni faqat klaviatura yordamida amalga oshirish:
	"window.confirmBeforeClose": "keyboardOnly",

	// Emmet kengaytmasini tab tugmasi bilan faollashtirish:
	"emmet.triggerExpansionOnTab": true,

	// Git repozitoriyasini ota papkalarida ochmaslik:
	"git.openRepositoryInParentFolders": "never",

	// Kursorni nozik chiziq sifatida ko‘rsatish:
	"editor.cursorStyle": "line-thin",

	// Kursorning silliq animatsiyasini explicit qilish (faqat aniqlangan vaqtda animatsiya qilish):
	"editor.cursorSmoothCaretAnimation": "on",

	// JS/TS proyektida experimental dekoratorlarni qo‘llashni yoqish:
	"js/ts.implicitProjectConfig.experimentalDecorators": true,

	// Kursorni ko‘rsatishda bir nechta ta'riflar mavjud bo‘lsa, "goto"ni ishlatish:
	"editor.gotoLocation.multipleDefinitions": "goto",

	// Erişim yordamchi vositalarini o‘chirish:
	"editor.accessibilitySupport": "off",

	// Sinxronizatsiya qilinmaydigan kengaytmalar ro‘yxati:
	"settingsSync.ignoredExtensions": ["vscode-remote.remote-ssh", "vscode-remote.remote-ssh-edit"],

	// Ish joyi (workspace)da layoutni boshqarishni o‘chirish:
	"workbench.layoutControl.enabled": false,

	// Editor bo‘sh bo‘lsa, maslahatlarga hint ko‘rsatmaslik:
	"workbench.editor.empty.hint": "hidden",

	// Editor tablarining bo‘yi kichik qilish:
	"window.density.editorTabHeight": "compact",

	// PowerShellni Windows uchun terminalni default profil sifatida o‘rnatish:
	"terminal.integrated.defaultProfile.windows": "PowerShell",

	// Terminalda ishlatiladigan shriftni MesloLGS NF qilib o‘rnatish:
	"terminal.integrated.fontFamily": "MesloLGS NF",

	// Tizim oynasini 1x darajaga kattalashtirish:
	"window.zoomLevel": 1,

	// Better Comments kengaytmasi uchun maxsus teglar va ranglarni sozlash:
	"better-comments.tags": [
		{
			"tag": "!", // Tezkor ogohlantirishlar uchun tag
			"color": "#FF2D00", // Rang: qizil
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "?", // Savol uchun tag
			"color": "#3498DB", // Rang: ko‘k
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "//", // Kommentariyalar uchun tag
			"color": "#474747", // Rang: kulrang
			"strikethrough": true, // Chiziq bilan belgilash
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "todo", // "Todo" vazifalari uchun tag
			"color": "#FF8C00", // Rang: apelsin
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "*", // Muhim belgilar uchun tag
			"color": "#98C379", // Rang: yashil
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		}
	],
	// Auto Rename Tag kengaytmasini HTML, XML, PHP va JavaScript tillarida faollashtirish:
	"auto-rename-tag.activationOnLanguage": ["html", "xml", "php", "javascript"],

	// PHP uchun docblock snippetlarni sozlash:
	"php.docblock.classSnippet": {
		"@author": "John", // Muallifni o'rnatish
		"@copyright": "(c) $CURRENT_YEAR" // Mualliflik huquqi va joriy yilni avtomatik qo‘shish
	},

	// Java uchun konfiguratsiyalarni sozlash (JDK versiyalarini qo‘shish):
	"java.configuration.runtimes": [
		{
			"name": "JavaSE-1.8", // Java 1.8 versiyasining konfiguratsiyasi
			"path": "/path/to/jdk-8" // JDK 1.8ning yo'li
		},
		{
			"name": "JavaSE-11", // Java 11 versiyasining konfiguratsiyasi
			"path": "/path/to/jdk-11" // JDK 11ning yo'li
		},
		{
			"name": "JavaSE-24", // Java 24 versiyasining konfiguratsiyasi
			"path": "/path/to/jdk-24", // JDK 24ning yo'li
			"default": true // JDK 24ni standart qilib belgilash
		}
	],

	// PHP fayllarini saqlashda formatlashni yoqish:
	"[php]": {
		"editor.formatOnSave": true
	},

	// HTML formatlash sozlamalari:
	"html.format.contentUnformatted": null, // "pre", "code", "textarea" elementlari ichidagi matnni formatlamaslik
	"html.format.extraLiners": "head, body, /html", // "head", "body", va "/html" elementlaridan keyin yangi satr qo‘shish
	"html.format.indentHandlebars": false, // Handlebars kodini ichki indentatsiyani faollashtirishni o‘chirish
	"html.format.indentInnerHtml": false, // HTML ichidagi ichki HTML kodini indentatsiya qilishni o‘chirish
	"html.format.maxPreserveNewLines": null, // Bo'sh satrlarni saqlash cheklovini olib tashlash
	"html.format.preserveNewLines": true, // Yangi satrlarni saqlashni yoqish
	"html.format.wrapLineLength": 120, // Qator uzunligini 120 belgiga qisqartirish
	"html.format.wrapAttributes": "auto", // Harf terish vaqtida formatlashni o‘chirish
	"editor.formatOnPaste": true, // Kodni nusxalashda (paste) formatlashni yoqish
	"editor.formatOnSaveMode": "file", // Formatlashni faqat faylni saqlashda qo‘llash

	// Prettier va ESLint uchun sozlamalar:
	"vs-code-prettier-eslint.prettierLast": false, // Prettier ni oxirgi qadam sifatida ishlatmaslik

	// Ish joyi uchun ikonka mavzusi:
	"workbench.iconTheme": "material-icon-theme", // Material ikonkalarini ishlatish

	// Jupyter notebooklar uchun Prettierni standart formatlovchi sifatida sozlash:
	"notebook.defaultFormatter": "esbenp.prettier-vscode",

	// Explorer uchun tasdiqlashlarni o‘chirish:
	"explorer.confirmDragAndDrop": false, // Fayllarni tortib qo‘yishda tasdiqlashni o‘chirish
	"explorer.confirmDelete": false, // Faylni o‘chirishda tasdiqlashni o‘chirish

	// Live Server kengaytmasining sozlamalari:
	"liveServer.settings.donotVerifyTags": true, // Taglarni tekshirishni o‘chirish
	"liveServer.settings.donotShowInfoMsg": true, // Info xabarlarini ko‘rsatmaslik

	// Fayllarni ko‘rish va tahrirlash uchun editor bog'lanishlarini sozlash:
	"workbench.editorAssociations": {
		"*.copilotmd": "vscode.markdown.preview.editor", // ".copilotmd" fayllarini Markdown preview editorida ochish
		"*.zip": "default" // ".zip" fayllarini default editor bilan ochish
	},
	// Terminal kursorining kengligini sozlash:
	"terminal.integrated.cursorWidth": 5, // Terminal kursorining kengligini 8 qilib belgilash
	"terminal.integrated.cursorStyle": "line", // Terminalda kursorni chiziq shaklida ko‘rsatish
	"terminal.integrated.cursorStyleInactive": "line", // Aktiv bo‘lmagan terminalda ham chiziqli kursor ko‘rsatish

	// Kodda inline (ichki) takliflar bilan ishlash:
	"editor.inlineSuggest.suppressSuggestions": true, // Inline takliflarni o‘chirish

	// Editorning tab va sozlamalari:
	"editor.tabSize": 2, // Tab kengligini 2 qilib belgilash
	"editor.smoothScrolling": true, // Silliq skrollingni yoqish
	"workbench.list.smoothScrolling": true, // Ish joyidagi ro‘yxatlar uchun ham silliq skrollingni yoqish
	"terminal.integrated.smoothScrolling": true, // Terminalda silliq skrollingni yoqish

	// Editorning o‘lcham va qator balandligi:
	"editor.fontSize": 16, // Font o‘lchamini 15 px qilib belgilash
	"editor.lineHeight": 27, // Qator balandligini 27 qilib belgilash

	// Sticky Scroll (saqlash holatidagi skrolling) sozlamalari:
	"editor.stickyScroll.enabled": false, // Sticky Scrollni o‘chirish (editorni yuqoriga yoki pastga skrollashda kodni yuqoriga saqlab qo‘yish)

	// Bracket Pair Colorization (qavslarning ranglarini o‘zgartirish):
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true, // Har bir qavs turi uchun alohida ranglar havzasini yaratish

	// Kursorni blink (yorqinlashish) effektini sozlash:
	"editor.cursorBlinking": "expand", // Kursorning yorqinlashishini "expand" (kengayish) usulida sozlash
	"terminal.integrated.cursorBlinking": true, // Terminalda kursorning yorqinlashishini yoqish

	// Ish joyidagi sozlamalar:
	"workbench.settings.applyToAllProfiles": ["liveshare.sharedTerminalWidth"], // "Live Share" profilida o‘zgartirishlar uchun sozlamalarni qo‘llash

	// Scroll va kursorni boshqarish:
	"editor.mouseWheelZoom": true, // Mouse wheel yordamida zoom qilishni yoqish
	"editor.cursorWidth": 3, // Editor kursorining kengligini 3 qilib belgilash
	"workbench.editor.tabSizingFixedMaxWidth": 190, // Tabning maksimal kengligini 190px qilib belgilash

	// SCM (source control management) uchun diff dekoratsiyalarini sozlash:
